<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bigyan.com.milwaukeeelectrical.activities.DetailsViewActivity"
    tools:showIn="@layout/activity_details_view">

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="City"
        android:id="@+id/cityTextView"
        android:textSize="25dp"
        android:layout_above="@+id/statusTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#0553fc" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status"
        android:id="@+id/statusTextView"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/displayStatusText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#0553fc" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Humidity"
        android:id="@+id/humidityTextView"
        android:textSize="25dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#0553fc" />

    <TextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pressure"
        android:id="@+id/pressureTextView"
        android:textSize="25dp"
        android:layout_below="@+id/humidityTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#0553fc" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/displayCityText"
        android:textSize="20dp"
        android:layout_alignTop="@+id/cityTextView"
        android:layout_alignLeft="@+id/displayStatusText"
        android:layout_alignStart="@+id/displayStatusText" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/displayStatusText"
        android:layout_above="@+id/humidityTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/displayHumidityText"
        android:layout_above="@+id/pressureTextView"
        android:layout_alignRight="@+id/displayStatusText"
        android:layout_alignEnd="@+id/displayStatusText"
        android:textSize="20dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/displayPressureText"
        android:layout_alignBottom="@+id/pressureTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Details"
        android:id="@+id/detailsViewText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#19039a" />

</RelativeLayout>
