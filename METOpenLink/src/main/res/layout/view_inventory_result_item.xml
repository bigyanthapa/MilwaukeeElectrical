<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/toolImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/mt_margin_small"
        android:layout_marginLeft="@dimen/mt_margin_standard"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/toolImageView"
        android:layout_toLeftOf="@+id/addToolImageView"
        android:layout_marginStart="@dimen/mt_margin_small"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <com.milwaukeetool.mymilwaukee.view.MTTextView
            android:id="@+id/toolDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textSize="@dimen/mt_font_size_large"
            android:gravity="center_vertical"
            android:singleLine="false"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/mt_black"/>

        <com.milwaukeetool.mymilwaukee.view.MTTextView
            android:id="@+id/toolModelNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/mt_font_size_medium"
            android:layout_marginTop="@dimen/mt_margin_small"
            android:textColor="@color/mt_common_gray"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/addToolImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true"
        android:background="@android:color/transparent" />
</RelativeLayout>