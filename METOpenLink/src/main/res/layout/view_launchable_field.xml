<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@null">

    <com.milwaukeetool.mymilwaukee.view.MTTextView
        android:id="@+id/editTextField"
        style="@style/EditText.MilwaukeeTool"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/mt_margin_large"
        android:layout_marginRight="@dimen/mt_margin_large"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLines="1"
        android:paddingLeft="@dimen/mt_padding_standard"
        android:paddingRight="@dimen/mt_padding_standard"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColorHint="@color/mt_very_light_gray"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/mt_font_size_standard" />
</RelativeLayout>