<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mt_white">

        <com.milwaukeetool.mymilwaukee.view.MTMilwaukeeItemView
            android:id="@+id/itemSearchResultsMilwaukeeView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <ListView
            android:id="@+id/itemSearchResultsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:divider="@color/mt_divider_gray"
            android:dividerHeight="1dp"
            android:visibility="invisible"/>

        <RelativeLayout
            android:id="@+id/itemSearchResultsNoItemsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mt_white"
            android:visibility="invisible">

            <com.milwaukeetool.mymilwaukee.view.MTTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="No Items Found"
                android:textSize="@dimen/mt_font_size_standard"
                android:textColorLink="@color/mt_common_gray" />

        </RelativeLayout>

</FrameLayout>