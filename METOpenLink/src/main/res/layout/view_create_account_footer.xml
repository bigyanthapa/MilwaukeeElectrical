<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@null">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:textSize="15sp"
        android:background="@drawable/shaded_background"
        android:text="I would like to receive email communications from Milwaukee Tool." />

    <com.milwaukeetool.mymilwaukee.view.MTButton
        android:id="@+id/createAccountButton2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/black_button_selector"
        android:text="CREATE ACCOUNT"
        android:layout_below="@+id/checkBox"
        android:textColor="@color/mt_white" />

    <TextView
        android:id="@+id/privacy_policy"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/createAccountButton2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:gravity="center"
        android:text="Privacy Policy"
        android:textColor="@color/mt_white"
        android:textStyle="normal" />

</RelativeLayout>