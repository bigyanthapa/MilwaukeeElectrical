<?xml version="1.0" encoding="utf-8"?>

<com.milwaukeetool.mymilwaukee.view.MTLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <com.milwaukeetool.mymilwaukee.view.RitalinLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:descendantFocusability="afterDescendants">

        <ListView
            android:id="@+id/createAccountListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_centerVertical="true"
            android:background="@null"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:descendantFocusability="afterDescendants"/>

        <com.milwaukeetool.mymilwaukee.view.MTTextView
            android:id="@+id/noNetworkConnectivityTextView"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/medium_shaded_background"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/mt_margin_standard"
            android:padding="@dimen/mt_padding_standard"
            android:text="@string/dialog_title_no_network_connection"
            android:gravity="center"
            android:textSize="@dimen/mt_font_size_large"
            android:textColor="@color/mt_white"
            android:visibility="invisible"/>

    </com.milwaukeetool.mymilwaukee.view.RitalinLayout>

</com.milwaukeetool.mymilwaukee.view.MTLayout>