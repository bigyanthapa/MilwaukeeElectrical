<?xml version="1.0" encoding="utf-8"?>

<com.milwaukeetool.mymilwaukee.view.MTLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null">

                <ImageView
                    android:id="@+id/backgroundHeaderImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mtdetails_background"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/addItemBackgroundImageView"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/add_item_bg"/>


                <ImageView
                    android:id="@+id/addItemImageView"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:src="@drawable/tool"/>
            </FrameLayout>

            <com.milwaukeetool.mymilwaukee.view.MTHeaderTextView
                android:id="@+id/addItemDetailPlaceholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mt_white"
                android:paddingLeft="@dimen/mt_padding_large"
                android:paddingRight="@dimen/mt_padding_large"
                android:paddingTop="@dimen/mt_padding_standard"
                android:paddingBottom="@dimen/mt_margin_standard"
                android:layout_marginBottom="@dimen/mt_margin_small"
                android:text="@string/item_detail_product_information"
                android:background="@color/mt_red"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/addItemDetailLayout"
                    android:orientation="vertical">
                </LinearLayout>

        </LinearLayout>

    </ScrollView>

</com.milwaukeetool.mymilwaukee.view.MTLayout>