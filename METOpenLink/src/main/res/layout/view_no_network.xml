<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mt_black">

    <ImageButton
        android:id="@+id/noNetworkConnectivityCloseButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@android:color/transparent" />

    <com.milwaukeetool.mymilwaukee.view.MTTextView
        android:id="@+id/noNetworkConnectivityTextView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@null"
        android:gravity="center"
        android:text="@string/dialog_title_no_network_connection"
        android:textColor="@color/mt_white" />

</RelativeLayout>